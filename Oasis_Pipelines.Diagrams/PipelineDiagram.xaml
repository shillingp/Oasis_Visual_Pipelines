<UserControl
    x:Class="Oasis_Pipelines.Diagrams.PipelineDiagram"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converters="clr-namespace:Oasis_Pipelines.Diagrams.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:sessionManagement="clr-namespace:Oasis_Pipelines.Services.SessionManagement;assembly=Oasis_Pipelines"
    xmlns:templateSelectors="clr-namespace:Oasis_Pipelines.Diagrams.Classes.TemplateSelectors"
    d:DataContext="{d:DesignInstance sessionManagement:ISessionContext}"
    d:DesignHeight="300"
    d:DesignWidth="300"
    mc:Ignorable="d">
    <UserControl.Resources>
        <converters:ConcatenateConverter x:Key="ConcatenateConverter" />

        <DataTemplate x:Key="Thing1">
            <Rectangle
                Width="100"
                Height="100"
                Fill="Red" />
        </DataTemplate>

        <DataTemplate x:Key="Thing2">
            <Rectangle
                Width="50"
                Height="50"
                Fill="Blue" />
        </DataTemplate>

        <templateSelectors:PipelineObjectTemplateSelector
            x:Key="PipelineObjectTemplateSelector"
            BlockTemplate="{StaticResource Thing1}"
            ConnectionTemplate="{StaticResource Thing2}" />
    </UserControl.Resources>
    <ItemsControl ItemTemplateSelector="{StaticResource PipelineObjectTemplateSelector}">
        <ItemsControl.ItemsSource>
            <MultiBinding Converter="{StaticResource ConcatenateConverter}">
                <Binding Path="BlockManager.AllBlocks" />
                <Binding Path="ConnectionManager.AllConnections" />
            </MultiBinding>
        </ItemsControl.ItemsSource>
        <ItemsControl.ItemsPanel>
            <ItemsPanelTemplate>
                <Canvas x:Name="BlockDiagramCanvas" ClipToBounds="True" />
            </ItemsPanelTemplate>
        </ItemsControl.ItemsPanel>
        <ItemsControl.ItemContainerStyle>
            <Style TargetType="ContentPresenter">
                <Setter Property="Canvas.Left" Value="{Binding Position.X}" />
                <Setter Property="Canvas.Top" Value="{Binding Position.Y}" />
            </Style>
        </ItemsControl.ItemContainerStyle>
        <!-- <ItemsControl.ItemTemplate> -->
        <!--     <DataTemplate DataType="{x:Type interfaces:IDiagramObject}"> -->
        <!--         <ContentControl Content="{Binding CanvasElement}" /> -->
        <!--     </DataTemplate> -->
        <!-- </ItemsControl.ItemTemplate> -->
    </ItemsControl>
</UserControl>
