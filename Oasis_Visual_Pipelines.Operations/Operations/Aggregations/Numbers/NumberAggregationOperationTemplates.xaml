                <material:PackIcon HorizontalAlignment="Center" Kind="Numeric" />
            </UniformGrid>
        </DockPanel>
    </DataTemplate>

    <DataTemplate DataType="{x:Type local:SubtractNumberBlockDiagramOperation}">
