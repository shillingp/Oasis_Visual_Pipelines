<UserControl
	x:Class="Oasis_Visual_Pipelines.Controls.MultiSelectControl"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:local="clr-namespace:Oasis_Visual_Pipelines.Controls"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	d:Background="White"
	d:DesignHeight="450"
	d:DesignWidth="800"
	mc:Ignorable="d">
	<ItemsControl d:ItemsSource="{d:SampleData ItemCount=5}" ItemsSource="{Binding RelativeSource={RelativeSource AncestorType=local:MultiSelectControl}, Path=ItemsSource}">
		<ItemsControl.ItemTemplate>
			<DataTemplate>
				<DockPanel>
					<TextBlock Text="{Binding}" />
					<CheckBox />
				</DockPanel>
			</DataTemplate>
		</ItemsControl.ItemTemplate>
	</ItemsControl>
</UserControl>
